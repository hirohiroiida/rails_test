<h1>ユーザー一覧</h1>

<%= link_to '新規登録', new_admin_user_path ,class: 'btn btn-primary' %>

<table class="table">
    <thead>
        <tr>
            <th><%= User.human_attribute_name :name %></th>
            <th><%= User.human_attribute_name(:email) %></th>
            <th><%= User.human_attribute_name(:admin) %></th>
            <th><%= User.human_attribute_name(:created_at) %></th>
            <th><%= User.human_attribute_name(:updated_at) %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <th><%= link_to user.name, [:admin, user] %></th>
                <th><%= user.email %></th>
                <th><%= user.admin? ? 'あり' : 'なし' %></th>
                <th><%= user.created_at %></th>
                <th><%= user.updated_at %></th>
                <th>
                  <%= link_to '編集', edit_admin_user_path(user) ,class: 'btn btn-primary' %>
                  <%= link_to '削除', [:admin, user], method: :delete, data: { confirm: "タスク『#{user.name}』を削除します。よろしいですか？"}, class: 'btn btn-primary' %>
                </th>
            </tr>
        <% end %>
    </tbody>
</table>

