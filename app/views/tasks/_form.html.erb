<% if task.errors.present? %>
  <ul class="ul#error_explanation">
    <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: task, local: true do |form| %>
  <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', id: 'task_name' %>
  </div>
  <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, rows: 5, class: 'form-control', id: 'task_description' %>
  </div>
  <br>
  <%= form.submit nil, class: 'btn btn-primary' %>
<% end %>