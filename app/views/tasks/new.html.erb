<div class="container-fluid">
    <h1>タスクの新規投稿</h1>
    <div class= "nav.justify-content-end">
        <%= link_to '投稿一覧へ', tasks_path, class: 'nav-link' %>
    </div>

    <%= form_with model: @task, local: true do |form| %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control', id: 'task_name' %>
        </div>
        <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description, rows: 5, class: 'form-control', id: 'task_description' %>
        </div>
        <br>
        <%= form.submit nil, class: 'btn btn-primary' %>
        
    <% end %>   
</div>