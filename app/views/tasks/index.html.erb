<div class="container">
    <h2>投稿一覧</h2>
    <%= link_to '新規作成', new_task_path ,class: 'btn btn-primary' %>

    <table class="table">
        <thead>
            <tr>
                <th>タスク名</th>
                <th>説明</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <th><%= task.name %></th>
                    <th><%= task.description %></th>
                    <th><%= link_to 'show', task %></th>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

