<div class="container">
    <h2>タスク一覧</h2>
    <%= link_to '新規作成', new_task_path ,class: 'btn btn-primary' %>

    <table class="table">
        <thead>
            <tr>
                <th><%= Task.human_attribute_name :name %></th>
                <th><%= Task.human_attribute_name(:created_at) %></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <th><%= link_to task.name, task %></th>
                    <th><%= task.created_at %></th>
                    <th><%= link_to '編集', edit_task_path(task) ,class: 'btn btn-primary' %></th>
                    <th><%= link_to '削除', task, method: :delete, data: { confirm: "タスク『#{task.name}』を削除します。よろしいですか？"}, class: 'btn btn-primary' %></th>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

